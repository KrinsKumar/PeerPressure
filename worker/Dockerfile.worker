# Dockerfile.worker
FROM node:18-alpine

# Set the working directory
WORKDIR /usr/src/app

# Copy the package.json and package-lock.json
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy the worker source code
COPY worker.js ./

# Expose the port the worker will run on
EXPOSE 3001

# Command to run the worker, expecting the port as an argument
CMD ["node", "worker.js", "3001"]
